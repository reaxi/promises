{
    "name": "@reaxi/promises",
    "version": "0.2.0",
    "main": "dist/index.js",
    "source": "./src/index.ts",
    "types": "dist/index.d.ts",
    "repository": "https://github.com/reaxi/promises",
    "author": {
        "name": "Andrew Colman"
    },
    "keywords": [
        "node",
        "typescript",
        "promise",
        "async",
        "await",
        "catch"
    ],
    "license": "MIT",
    "scripts": {
        "prepublishOnly": "yarn build",
        "build": "rollup --config rollup.config.js",
        "build:quick": "sucrase ./src -d ./dist --transforms typescript,imports",
        "minify": "terser dist/index.js --compress ecma=2015,computed_props=false -o dist/index.js --comments false",
        "dev": "nodemon ./src/index.ts ",
        "predev:compiled": "yarn build:quick",
        "dev:compiled": "node dist/index.js",
        "test": "jest -i",
        "test:verbose": "jest --verbose",
        "test:watch": "jest --watch",
        "lint": "eslint --cache --fix",
        "format": "prettier --write",
        "postinstall": "husky install",
        "prepack": "yarn run build --inspect && pinst --disable",
        "postpack": "pinst --enable"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@rollup/plugin-typescript": "^8.2.5",
        "@swc/core": "^1.2.145",
        "@swc/jest": "^0.2.20",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.11.2",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "axios": "^0.26.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.4.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^5.2.0",
        "husky": "^7.0.4",
        "jest": "^27.0.6",
        "jsonc-require": "^1.0.1",
        "lint-staged": "^12.3.4",
        "msw": "^0.39.2",
        "nodemon": "^2.0.15",
        "pinst": "^3.0.0",
        "prettier": "^2.5.1",
        "rollup": "^2.56.2",
        "rollup-plugin-command": "^1.1.3",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-dts": "^4.2.0",
        "sucrase": "^3.20.1",
        "terser": "^5.12.1",
        "ts-jest": "^27.0.4",
        "tslib": "^2.3.1",
        "typescript": "^4.3.5"
    },
    "lint-staged": {
        "*.{js,ts}": "npm run lint",
        "*.{js,ts,css,md}": "npm run format"
    },
    "packageManager": "yarn@3.2.0"
}
